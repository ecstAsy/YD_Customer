.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .5);
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 40%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
   font-size: 28rpx;
   text-align: center;
   color: #666;
}



.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border: none;
  outline: medium;
  border-radius: 0rpx;
  line-height: 86rpx;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ff8b00;
  text-align: center;
  border: none;
  outline: medium;
  border-radius: 0rpx;
  line-height: 86rpx;
}
.btn-cancel::after,.btn-confirm::after{
  border: none;
  outline: medium;
  border-radius: 0rpx;
}