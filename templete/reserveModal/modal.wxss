.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 84%;
  overflow: hidden;
  position: fixed;
  top: 23%;
  left: 8%;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 30rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #000;
  text-align: center;
  font-family:PingFangSC-Medium;
}

.modal-content {
  padding: 83rpx 64rpx 97rpx;
  font-size: 28rpx;
  color: #939BA4;
  font-family:PingFangSC-Regular;
}

.Modal_info text{
  display: block;
}

.Modal_info text:first-of-type{
  color: #333;
  margin-bottom: 38rpx;
}

.Modal_info text:last-of-type{
  margin-top: 16rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  padding-bottom: 62rpx;
  font-size: 34rpx;
}

.btn-confirm {
  width: 92%;
  height: 80rpx;
  border-radius: 36rpx;
  border: none;
  outline: medium;
  color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  background: linear-gradient(to right, #ff8b00 0, #f6be1a 100%);
  box-shadow: 0rpx 10rpx 12rpx rgba(255, 170, 87, 0.35);
}