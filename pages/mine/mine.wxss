@import "../../templete/info/info.wxss";
page {
  border-top: 1rpx solid #e2e4e8;
  background: #f5f5f5;
  font-family:PingFangSC-Regular;
}

.userInfo {
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx 0;
}

.userInfo_Avatar {
  display: inline-block;
  border-radius: 50%;
  margin-left: 22%;
  vertical-align: middle;
  overflow: hidden;
}

.userInfo_about {
  display: inline-block;
  font-size: 28rpx;
  color:#333;
  vertical-align: middle;
  margin-left: 29rpx;
}

.carInfo{
  width: 100%;
  background: #fff;
  margin-top: 51rpx;
  margin-bottom: 20rpx;
}

.serviceComplaint{
  width: 100%;
  background: #fff;
  clear: both;
}

.title{
  font-size:32rpx;
  color: #333;
  margin-left: 4%;
}

.detail{
  font-size:28rpx;
  color: #939BA4;
  float: right;
  margin-right: 8%;
}

.add_icon{
  float: right;
  margin-right: 4%;
}